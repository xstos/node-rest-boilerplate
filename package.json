{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "ðŸŒŒðŸš€ A Node.js boilerplate with RESTful, Prisma, PostgreSQL and awesome tools.",
  "main": "src/index.js",
  "repository": "git@github.com:cuongw/node-boilerplate.git",
  "author": "Nguyen Duy Cuong <cuongw.me@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "dotenv -- node dist/index.js",
    "start:dev": "dotenv -- nodemon --exec babel-node src/index.js",
    "prisma:deploy": "dotenv -- prisma deploy",
    "prisma:deploy:force": "dotenv -- prisma deploy --force",
    "prisma:reset": "dotenv -- prisma reset",
    "prisma:delete": "dotenv -- prisma delete",
    "clean": "rm -rf dist",
    "dist": "babel src --out-dir dist",
    "build": "npm run clean  && npm run dist",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "pretty-quick --staged",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "dependencies": {
    "@hapi/boom": "^7.4.3",
    "axios": "^0.19.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "celebrate": "^10.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "prisma-client-lib": "^1.34.8",
    "signale": "^1.4.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-plugin-root-import": "^6.4.1",
    "dotenv-cli": "^3.0.0",
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.2.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.1",
    "prettier": "1.18.2",
    "pretty-quick": "^1.11.1",
    "prisma": "^1.34.8"
  }
}
